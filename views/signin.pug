include ./header.pug 


div#signUpformDiv
    h1#signupHeading Sign in
    p#alreadyHaveAcc 
        a(href="/signup") Need an account?
    if(result.error)
        for e in result.error
            p.apiErrorMsg #{e}
    form(action="/signin", method="post")
        div.form-group
            input.form-control(type="text", placeholder="Email",name="email")
        div.form-group
            input.form-control(type="password" ,placeholder="Password",name="password")
        button#signupBtn.btn.btn-primary(type="submit") Sign in
    

include ./footer.pug             
 
